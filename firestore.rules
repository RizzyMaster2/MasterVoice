rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Profiles:
    // - Anyone can read any profile (to see display names, avatars etc.)
    // - Only the owner can create or update their own profile
    // - Deletion is disallowed for safety
    match /profiles/{userId} {
      allow read: if true;
      allow create, update: if isSignedIn() && isOwner(userId);
      allow delete: if false;
    }

    // Friends:
    // - Users can only read, create, or delete their OWN friends list entries
    match /friends/{userId}/{friendId} {
        allow read, write: if isSignedIn() && isOwner(userId);
    }
    
    // Friend Requests:
    // - Can be read by either sender or receiver
    // - Can be created by the sender
    // - Can be updated (to accepted/declined) by the receiver
    // - Can be deleted by either sender or receiver
    match /friend_requests/{requestId} {
        allow read, delete: if isSignedIn() && (request.auth.uid == resource.data.sender_id || request.auth.uid == resource.data.receiver_id);
        allow create: if isSignedIn() && request.auth.uid == request.resource.data.sender_id;
        allow update: if isSignedIn() && request.auth.uid == resource.data.receiver_id;
    }

    // Messages:
    // - Can be read by sender or receiver
    // - Can be created by the sender
    // - Can only be deleted by the sender
    match /messages/{messageId} {
      allow read: if isSignedIn() && (request.auth.uid == resource.data.sender_id || request.auth.uid == resource.data.receiver_id);
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.sender_id;
      allow update: if false; // Disallow message edits
      allow delete: if isSignedIn() && request.auth.uid == resource.data.sender_id;
    }
    
     // Chats (if you have a collection for chat metadata):
    // - Can be read or written by participants of the chat
    match /chats/{chatId} {
      allow read, write: if isSignedIn() && request.auth.uid in resource.data.participants;
    }
  }
}
